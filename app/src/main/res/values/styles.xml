    </style>
    <style name="MyDialogTheme3" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/Brown</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">#ffffa500</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/dialog</item>
    </style>
    <style name="MyDialogTheme4" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
